rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; // Allow admin panel to read user data
    }
    
    // Allow read/write access to turfs/venues (for admin panel)
    match /turfs/{turfId} {
      allow read, write: if true; // Temporarily allow all access for development
    }
    
    // Allow read/write access to venues (for admin panel)
    match /venues/{venueId} {
      allow read, write: if true; // Allow all access for development
    }
    
    // Users can read/write their own bookings
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || true); // Allow admin access
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, write: if true; // Allow admin panel access
    }
    
    // Users can read challenges
    match /challenges/{challengeId} {
      allow read, write: if true; // Allow all access for development
    }
    
    // Teams
    match /teams/{teamId} {
      allow read, write: if true; // Allow all access for development
    }
    
    // Admin-only collections
    match /admins/{adminId} {
      allow read, write: if true; // Allow all access for development
    }
    
    match /admin-stats/{document} {
      allow read, write: if true; // Allow all access for development
    }
    
    // Allow access to any other collections for development
    match /{document=**} {
      allow read, write: if true;
    }
  }
}